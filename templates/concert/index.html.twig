{% extends 'base.html.twig' %}

{% block title %}Concert index{% endblock %}

{% block body %}
    <h1>Concert index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomConcert</th>
                <th>DateConcert</th>
                <th>NomSalle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concert in concerts %}
            <tr>
                <td>{{ concert.id }}</td>
                <td>{{ concert.nomConcert }}</td>
                <td>{{ concert.dateConcert ? concert.dateConcert|date('Y-m-d') : '' }}</td>
                <td>{{ concert.nomSalle }}</td>
                <td>
                    <a href="{{ path('app_concert_show', {'id': concert.id}) }}">show</a>
                    <a href="{{ path('app_concert_edit', {'id': concert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_concert_new') }}">Create new</a>
{% endblock %}
